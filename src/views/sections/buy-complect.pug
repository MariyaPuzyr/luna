                  input#blue(type='radio' name='color').catalog-filter__position__check
                  label(for='blue')
                    .color(style='background: blue;')
                .catalog-filter__position
                  input#white(type='radio' name='color').catalog-filter__position__check
                  label(for='white')
                    .color(style='background: white;')
                .catalog-filter__position
                  input#pearl(type='radio' name='color').catalog-filter__position__check
                  label(for='pearl')
                    .color(style='background: pearl;')
                .catalog-filter__position
                  input#beige(type='radio' name='color').catalog-filter__position__check
                  label(for='beige')
                    .color(style='background: beige;')
                .catalog-filter__position
                  input#powder(type='radio' name='color').catalog-filter__position__check
                  label(for='powder')
                    .color(style='background: powder;')
