.cart-modal(data-id='buy-complect')
  .cart-overlay
  .cart-modal__item
    .close
      +sprite('icon', 'close-ico')
    .cart-modal__item--body
      a(href='page.html').cart-modal__picture
        img(src='./img/catalog-img.jpg')
      .page-product-about
        .cart-product-body
          .cart-product__info.page-product
            .page-product-about--top
              h1.product-title !!!!FLOX BASIC
              .product-code АРТ: 555828
