extends ../extends/layout
block variables
  - var title = "Luna lingerie"

block content
  include ../includes/header
  .container-fluid
    .delivery-info
      h2 Контакты
      ul.catalog-breadcrumbs
        li.breadcrumb-item
          a(href='index.html') Головна
        li.breadcrumb-item.active(aria-current='page') Контакты

      .contacts-items
        .contact-info
          .contact-info__item
            .contact-icon
              +sprite('icon point-ico', 'point-ico')
            p г. Киев. ул.Луговая 12, ОЦ "Караван", оф.401.
              br
              | Пн-Пт: 09:00-19:00, Сб-Вс: 11:00-17:00
          .contact-info__item
            .contact-icon
              +sprite('icon phone-ico', 'phone-ico')
            p +38 (050) 388 52 80
              br
              | +38 (098) 348 46 13
          .contact-info__item
            .contact-icon
              +sprite('icon email-ico', 'email-ico')
            p email@luna.com
          ul.contact-info__social
            li
              a(href='#')
                +sprite('icon', 'telegram')
            li
              a(href='#')
                +sprite('icon', 'viber')
            li
              a(href='#')
                +sprite('icon', 'facebook')
            li
              a(href='#')
                +sprite('icon', 'instagram')
        .contact-info__form
          h5 Залишились запитання?
          form(action='#')
            .form-row
              .form-group
                input(type='text' placeholder='Имя, фамилия').form-control
            .form-row
              .form-group
                input(type='text' placeholder='Телефон').form-control
            .form-row
              .form-group
                textarea(placeholder='Текст для запитання' rows='10').form-control
            button(type='submit').cart-check-button Запитати
      .map-info
        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2537.583916049083!2d30.47000041589741!3d50.504701291335024!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40d4d277a95756a3%3A0x4d08dcb60adfe438!2z0KLQoNCmINCa0LDRgNCw0LLQsNC9!5e0!3m2!1sru!2sua!4v1581345689184!5m2!1sru!2sua', width='100%', height='555', frameborder='0', style='border:0;', allowfullscreen='')


  include ../includes/footer
  include ../sections/cart